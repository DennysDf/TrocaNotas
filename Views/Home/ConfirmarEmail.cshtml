@model SecSaudeAH.Models.Login.LoginVM
@{
    ViewData["Title"] = "ConfirmarEmail";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}



<div class="auth-box bg-light border-top border-secondary">
    <div id="loginform">
        @if (TempData["Erro"] != null)
        {<p class="text-center font-weight-bold text-danger">Usuário ou senha inválidos.</p>}
        <!-- Form -->
        <form class="form-horizontal m-t-20" id="loginform" asp-action="ConfirmarEmail">
            <div class="row ">
                <div class="col-12">
                    <label class="font-weight-bold">E-mail: </label>
                    <input asp-for="Email" autofocus type="text" class="form-control form-control-lg" placeholder="Seu e-mail..." aria-label="Username" aria-describedby="basic-addon1" required="">
                    <span asp-validation-for="Email" class="text-danger font-weight-bold"></span>
                </div>
            </div>
            <div class="row mt-3 float-right">
                <div class="col-sm-12 ">
                    <button class="btn btn-success">Enviar</button>
                </div>
            </div>
        </form>
    </div>
</div>





