@using SecSaudeAH.Models.Login
@model LoginVM
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<form asp-action="Cadastro" method="post">
    <div class="row">
        <div class="col-12">
            <label class="text-white">Nome:</label>
            <input asp-for="Nome" type="text" />
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <label class="text-white">Login:</label>
            <input asp-for="Login" type="text" />
        </div>
    </div>
    <div class="row">
        <div class="col-12 text-right">
            <button type="submit">Enviar</button>
        </div>
    </div>
</form>